@model MultiVariateNetworkExplorer2.Models.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>eMVNex</h1>

<div class="d-flex align-items-center min-vh-90">
    <div class="container">
        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <form method="post" asp-action="Login" asp-controller="Login" class="form-horizontal" id="login-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @Html.HiddenFor(x => x.ReturnUrl)
                    <div class="form-group">
                        <label class="control-label">Username:</label>
                        <input asp-for="UserName" class="form-control" value="@(Model != null ? Model.UserName : "")" type="text" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Password:</label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <span class="text-danger">
                            @ViewBag.Message
                        </span>
                    }
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-default"/>
                    </div>
                </form>
            </div>
            <div class="col-sm-4"></div>
        </div>
    </div>
</div>


